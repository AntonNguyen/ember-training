<div class="row">
    <div class="col-lg-10">
        <h2>Client: {{name}}</h2>
    </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <form role="form">
      <div class="form-group">
        <label>First name</label>
          {{input value=fname classNames="form-control"}}
      </div>
      <div class="form-group">
        <label>Last name</label>
          {{input value=lname classNames="form-control"}}
      </div>
      <div class="form-group">
        <label>Email address</label>
        {{input value=email classNames="form-control"}}
      </div>
    </form>
  </div>
</div>
<div class="btn-group">
  <button type="button" class="btn btn-default btn-success btn-large" {{action 'save'}} {{bindAttr disabled=isSavable}}>Save</button>
  <button type="button" class="btn btn-default btn-danger btn-large" {{action 'cancel'}}>Cancel</button>
</div>