<h2>Projects</h2>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Client</th>
    <th>&nbsp;</th>
  </tr>
    {{#each}}
        <tr>
          <td>{{#link-to 'project' this}}{{name}}{{/link-to}}</td>
          <td>{{description}}</td>
          <td>
            {{#if isInternal}}
              <span class="text-muted">Internal</span>
            {{else}}
              {{clientName}}
            {{/if}}
          </td>
          <td>{{#link-to 'project.edit' this}}edit{{/link-to}}</td>
        </tr>
    {{/each}}
</table>
